<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/imgSelected"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_multi_image_selected"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_corner_radius="15dp"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imgDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_cancel_24"
        app:layout_constraintBottom_toTopOf="@+id/imgSelected"
        app:layout_constraintEnd_toEndOf="@+id/imgSelected"
        app:layout_constraintStart_toEndOf="@+id/imgSelected"
        app:layout_constraintTop_toTopOf="@+id/imgSelected"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>